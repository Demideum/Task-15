namespace IJunior_Task15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userName;
            char userChar;

            Console.Write("Здравствуйте, введите ваше имя: ");
            userName = Console.ReadLine();

            Console.Write("Введите символ: ");
            userChar = Convert.ToChar(Console.ReadLine());

            for (int i = 0; i < 2; i++)
            {
                if (i == 1)
                {
                    Console.WriteLine($"\n{userChar}{userName}{userChar}");
                }

                for (int j = 0; j < userName.Length + 2; j++)
                {
                    Console.Write(userChar);
                }
            }
        }
    }
}
